  <xs:element name="modelZaduzenja" type="xs:integer"/>
  <xs:element name="pozivNaBrojZaduzenja" type="xs:NCName"/>
  <xs:element name="modelOdobrenja" type="xs:integer"/>
  <xs:element name="pozivNaBrojOdobrenja" type="xs:NCName"/>
